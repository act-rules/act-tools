{
  "name": "act-tools",
  "version": "1.0.0",
  "description": "Tools for Accessibility Conformance Testing rules",
  "author": "Wilco Fiers",
	"license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "develop": "jest --watch",
    "format": "prettier --write src/**/*.{ts,js}",
    "lint": "eslint src/**/*.{ts,js}",
    "test": "jest"
  },
  "dependencies": {
    "commander": "^8.0.0",
    "fastmatter": "^2.1.1",
    "globby": "^11.0.4",
    "make-dir": "^3.1.0",
    "outdent": "^0.8.0",
    "remark-frontmatter": "^3.0.0",
    "remark-parse": "^9.0.0",
    "ts-node": "^10.1.0",
    "unified": "^9.2.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/js-yaml": "^4.0.2",
    "@types/node": "^16.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "eslint": "^7.30.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.1",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.{js,ts}": [
        "eslint --write",
        "prettier --write",
        "git add"
      ]
    }
  }
}
